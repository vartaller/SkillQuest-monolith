generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  RESEARCHER
  VIEWER
}

enum Status {
  ACTIVE
  DELETED
}

model User {
  id        Int         @id @default(autoincrement())
  username  String
  email     String      @unique
  password  String
  status    Status      @default(ACTIVE)
  role      Role        @default(VIEWER)
  character Character[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Character {
  id                Int             @id @default(autoincrement())
  name              String
  level             Int             @default(0)
  currentExperience Int             @default(0)
  user              User            @relation(fields: [userId], references: [id])
  userId            Int
  passiveEffects    PassiveEffect[]
  activeEffects     ActiveEffect[]
  skills            Skill[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@map("—Åharacter")
}

model PassiveEffect {
  id          Int       @id @default(autoincrement())
  name        String
  skills      Skill[]
  value       Float
  isActive    Boolean
  character   Character @relation(fields: [characterId], references: [id])
  characterId Int
}

model ActiveEffect {
  id          Int       @id @default(autoincrement())
  name        String
  skills      Skill[]
  value       Float
  isActive    Boolean
  character   Character @relation(fields: [characterId], references: [id])
  characterId Int
}

model Skill {
  id               Int             @id @default(autoincrement())
  name             String
  stepType         Step            @relation(fields: [stepTypeId], references: [id])
  stepTypeId       Int
  currentStepValue Int
  level            Int
  stepsToNextLevel Int
  passiveEffects   PassiveEffect[]
  activeEffects    ActiveEffect[]
  character        Character       @relation(fields: [characterId], references: [id])
  characterId      Int
}

model Step {
  id     Int     @id @default(autoincrement())
  name   String
  skills Skill[]
}
